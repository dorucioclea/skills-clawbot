{
    "openapi": "3.1.0",
    "info": {
        "title": "Phone Call API",
        "description": "Make international phone calls",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://ringez-api.vercel.app/api/v1"
        }
    ],
    "paths": {
        "/auth/check-email": {
            "post": {
                "operationId": "checkEmail",
                "summary": "Check if email exists",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email"
                                    }
                                },
                                "required": [
                                    "email"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Email status",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "enum": [
                                                "new_user",
                                                "existing_user"
                                            ]
                                        },
                                        "requires_otp": {
                                            "type": "boolean"
                                        },
                                        "requires_password": {
                                            "type": "boolean"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/send-otp": {
            "post": {
                "operationId": "sendOtp",
                "summary": "Send OTP to email",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "email"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OTP sent"
                    }
                }
            }
        },
        "/auth/verify-otp": {
            "post": {
                "operationId": "verifyOtp",
                "summary": "Verify OTP and create account",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "otp": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "email",
                                    "otp"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Account created with 5 free minutes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        },
                                        "session_id": {
                                            "type": "string"
                                        },
                                        "free_minutes": {
                                            "type": "integer"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "operationId": "login",
                "summary": "Login with email and password",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "email",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful"
                    }
                }
            }
        },
        "/payments/plans": {
            "get": {
                "operationId": "getPlans",
                "summary": "Get available payment plans",
                "parameters": [
                    {
                        "name": "currency",
                        "in": "query",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "USD",
                                "INR"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of plans"
                    }
                }
            }
        },
        "/numbers/validate": {
            "post": {
                "operationId": "validateNumber",
                "summary": "Validate a phone number and get rates",
                "parameters": [
                    {
                        "name": "X-Session-ID",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "phone_number": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "phone_number"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Number validation result",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "valid": {
                                            "type": "boolean"
                                        },
                                        "country": {
                                            "type": "string"
                                        },
                                        "type": {
                                            "type": "string"
                                        },
                                        "estimated_rate": {
                                            "type": "object",
                                            "properties": {
                                                "per_minute": {
                                                    "type": "number"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/calls/initiate": {
            "post": {
                "operationId": "initiateCall",
                "summary": "Make a phone call",
                "parameters": [
                    {
                        "name": "X-Session-ID",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "to_number": {
                                        "type": "string"
                                    },
                                    "from_number": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "to_number"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Call initiated"
                    }
                }
            }
        }
    }
}